<!DOCTYPE html>
<html>
<head>
  <title>Faceorama</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js"></script>
  <%= csrf_meta_tag %>
</head>
<body>
  <h1>Faceorama</h1>
  Pimp your Facebook Profile now!<br>
  <br>
  <div>
    <% if logged_in? %>
      <div class="logout"><a href="#" onclick="FB.logout(function() { location.reload() }); return false;">Logout</a></div>
    <% end %>

    <%= yield %>

  </div>

  <div id="fb-root"></div>
  <script src="http://connect.facebook.net/en_US/all.js"></script>
  <script>
    FB.init({ appId: <%= facebook_app_id %>, cookie: true, status: true, xfbml: true });
  </script>


</body>
</html>
